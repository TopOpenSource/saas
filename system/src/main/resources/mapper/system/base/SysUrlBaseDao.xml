<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.sdstc.system.dao.base.SysUrlBaseDao">
	
	<resultMap id="SysUrlMap" type="com.sdstc.system.model.SysUrl">
	    <id column="id" property="id" />
	    <result column="gmt_create" property="gmtCreate" />
	    <result column="gmt_modified" property="gmtModified" />
	    <result column="create_account" property="createAccount" />
	    <result column="modified_account" property="modifiedAccount" />
	    <result column="is_delete" property="isDelete" />
	    <result column="name" property="name" />
	    <result column="url" property="url" />
	    <result column="p_id" property="pId" />
	    <result column="index" property="index" />
	    <result column="path" property="path" />
	</resultMap>
	
    <sql id="SysUrlCols">
      id,gmt_create,gmt_modified,create_account,modified_account,is_delete,name,url,p_id,index,path
    </sql>
    
    <sql id="SysUrlProps">
      #{id},#{gmtCreate},#{gmtModified},#{createAccount},#{modifiedAccount},#{isDelete},#{name},#{url},#{pId},#{index},#{path}
    </sql>
    
    <insert id="insert" parameterType="com.sdstc.system.model.SysUrl">
        insert into sys_url
        (<include refid="SysUrlCols"></include>)
        values
        (<include refid="SysUrlProps"></include>)
    </insert>
        
    <update id="updateSelectiveByPK" parameterType="com.sdstc.system.model.SysUrl">
		update sys_url
		<set>
		  
	        <if test="gmtCreate != null">
		        gmt_create = #{gmtCreate},
		    </if>
		  
	        <if test="gmtModified != null">
		        gmt_modified = #{gmtModified},
		    </if>
		  
	        <if test="createAccount != null and createAccount != ''">
		        create_account = #{createAccount},
		    </if>
		  
	        <if test="modifiedAccount != null and modifiedAccount != ''">
		        modified_account = #{modifiedAccount},
		    </if>
		  
	        <if test="isDelete != null and isDelete != ''">
		        is_delete = #{isDelete},
		    </if>
		  
	        <if test="name != null and name != ''">
		        name = #{name},
		    </if>
		  
	        <if test="url != null and url != ''">
		        url = #{url},
		    </if>
		  
	        <if test="pId != null">
		        p_id = #{pId},
		    </if>
		  
	        <if test="index != null and index != ''">
		        index = #{index},
		    </if>
		  
	        <if test="path != null and path != ''">
		        path = #{path},
		    </if>
		</set>
		<where>
		  id = #{id} 
		</where> 
	</update>
	
	<update id="updateByPK" parameterType="com.sdstc.system.model.SysUrl">
		update sys_url
		<set>
	    gmt_create = #{gmtCreate},
	    gmt_modified = #{gmtModified},
	    create_account = #{createAccount},
	    modified_account = #{modifiedAccount},
	    is_delete = #{isDelete},
	    name = #{name},
	    url = #{url},
	    p_id = #{pId},
	    index = #{index},
	    path = #{path},
		</set>
		<where>
		  id = #{id} 
		</where> 
	</update>
	
	<delete id="deleteByPK">
	   <!--存在删除状态键则逻辑删除-->
		update sys_url
		set is_delete = '1'
		<where>
		  id = #{id} 
		</where> 
	</delete>
	
	<select id="selectByPK" resultMap="SysUrlMap">
		select
			<include refid="SysUrlCols"></include>
		from sys_url
		<where>
		  id = #{id} 
		  and is_delete = '0'
		</where> 
	</select>
	
</mapper>